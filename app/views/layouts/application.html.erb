</footer>
<script>
  $(document).ready(function(){
    setTimeout(function(){
      $('#notice').remove();
      $('.alert').remove()
    }, 1500);
    $('#nav-hamburger').on('click', function(){
      var width = $(window).innerWidth()
      var wrapper = $('.wrapper').width()
      var left = (width - wrapper) / 2
      if(left == 12 ){
        $('.nav--links').css({'width': width + 'px'});
      }else{
        $('.nav--links').css({'width': width + 'px', 'left': '-'+ left + 'px'});
      }
      console.log(width)
      $('.nav--links').slideToggle(500)
      $(this).toggleClass('active')
    })
  })
</script>
