<body>
<% if alert.present? %>
  <p class="alert"><%= alert %></p>
<% end %>

<nav class="nav--main">
  <div class="wrapper">
    <span class="logo">
      <%= link_to lessons_path do%>
        <%= image_tag 'tlc-oneline-white.svg'%>
        <!-- <span class="font-quicksand">code:clubs</span> -->
      <% end %>
    </span>
    <a class="nav--hamburger" id="nav-hamburger"><span></span></a>
    <span class="nav--links">
      <%= link_to 'About', about_path %>
      <% if user_signed_in? %>
        <% if current_user.profile.present? %>
          <%= image_tag current_user.profile.avatar.url ? current_user.profile.avatar.url(:thumbnail) : '' %>
          <%= link_to 'My Profile', profile_path(current_user.profile) %>
        <% else %>
          <%= link_to 'Create Profile', new_profile_path%>
        <% end %>
        <% if current_user.admin? %>
          <%= link_to 'Admin', admin_path%>
        <% end %>
        <%= link_to 'Logout',  destroy_user_session_path, method: :delete %>
      <% else %>
        <%= link_to 'Sign In', new_user_session_path, method: :get%>
      <% end %>
      <a href="https://docs.google.com/forms/d/e/1FAIpQLSdxdcAx7qCrrpuT9oZ8exKNwxc2DUst6Ubh9sDNHaSEVEX8Lw/viewform?c=0&w=1" target="_blank" class="button button--tertiary as--request-button">Request Teacher Workshop</a>
    </span>
  </div>
</nav>

<div class="container-codeclubs">
  <%= yield %>
</div>
