<p id="notice"><%= notice %></p>

<h1>Listing Suggested Lessons</h1>

<table>
  <thead>
    <tr>
      <th>Lesson</th>
      <th>Suggested lesson</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suggested_lessons.each do |suggested_lesson| %>
      <tr>
        <td><%= suggested_lesson.lesson %></td>
        <td><%= suggested_lesson.suggested_lesson_id %></td>
        <td><%= link_to 'Show', suggested_lesson %></td>
        <td><%= link_to 'Edit', edit_suggested_lesson_path(suggested_lesson) %></td>
        <td><%= link_to 'Destroy', suggested_lesson, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

