<p id="notice"><%= notice %></p>

<h1>Listing Mailing Lists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Opt in</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mailing_lists.each do |mailing_list| %>
      <tr>
        <td><%= mailing_list.name %></td>
        <td><%= mailing_list.email %></td>
        <td><%= mailing_list.opt_in %></td>
        <td><%= link_to 'Show', mailing_list %></td>
        <td><%= link_to 'Edit', edit_mailing_list_path(mailing_list) %></td>
        <td><%= link_to 'Destroy', mailing_list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mailing list', new_mailing_list_path %>
